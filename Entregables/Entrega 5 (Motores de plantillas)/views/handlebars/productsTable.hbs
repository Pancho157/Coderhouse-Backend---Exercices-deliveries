{{> nav }}
<div class='container mt-5'>
    <div class='row'>
        <div class='col'>
            <table class='table'>
                <thead class='table-dark'>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </thead>
                <tbody>
                    {{!-- Mientras alla productos que vaya cargando una linea --}}
                    {{#each lista}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>AR${{this.precio}}</td>
                        <td><img src="{{this.urlImagen}}" height="30px"></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>